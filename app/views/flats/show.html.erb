<div class="container">
  <div class="card p-3">
    <div class="d-flex">
      <img src="<%= @flat.img %>" style="object-fit: cover" width="500" height="300">
      <div class="ml-3 d-flex flex-column justify-content-between">
        <div>

          <div class="d-flex justify-content-between">
            <h1 class="mb-5"><%= @flat.name %></h1>
            <div class="d-flex">
              <%= link_to edit_flat_path(@flat) do %>
                <h3 class="mr-3"><i class="fas fa-pen-square"></i></h3>
              <% end %>
              <%= link_to flat_path(@flat), method: :delete, data: { confirm: "Are you sure?"} do %>
                <h3><i class="fas fa-trash"></i></h3>
              <% end %>
            </div>
          </div>

          <h5><%= @flat.address %></h5>
        </div>
        <div class="d-flex">
          <h5 class="mr-5"><i class="fas fa-yen-sign"></i> <%= @flat.price_per_night %></h5>
          <h5><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></h5>
        </div>
      </div>
    </div>
    <div class="my-5">
      <h3>Description</h3>
      <h5><%= @flat.description %></h5>
    </div>
  </div>
</div>

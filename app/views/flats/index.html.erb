<div class="container d-flex">
  <div class="row">
    <% @flats.each do |f| %>
      <div class="col-12 col-lg-4">
        <%= link_to flat_path(f), class: 'acard' do %>
          <div class="card my-3">
            <img class="rounded-top" width="100%" height="200" src="<%= f.img %>" style="object-fit: cover">
            <div class="p-3">
              <h5 class="my-1"><%= f.name %></h5>
              <p style="color: grey"><%= f.address %></p>
              <div class="d-flex">
                <p class="mr-3"><i class="fas fa-yen-sign"></i> <%= f.price_per_night %></p>
                <p class="mr-3"><i class="fas fa-user-friends"></i> <%= f.number_of_guests %></p>
              </div>
            </div>
            <div class="p-3 d-flex">
              <p class="mr-3"><%= link_to 'Edit', edit_flat_path(f), class: 'btn btn-sm btn-outline-warning' %></p>
              <p><%= link_to 'Remove', flat_path(f), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-outline-danger' %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
